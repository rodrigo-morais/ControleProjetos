<% if @client.errors.any? %>
  <ul>
    <% @client.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @client do |f| %>
  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="control-group">
    <div class="left">
      <%= f.label :number, class: 'control-label' %>
      <div class="controls number">
        <%= f.number_field :number %>
      </div>
    </div>
    <div class="right">
      <%= f.label :complement, class: 'control-label' %>
      <div class="controls complement">
        <%= f.text_field :complement, :class => 'complement' %>
      </div>
    </div>
  </div>
  <div class="control-group">
    <div class="left">
      <%= f.label :ddd, class: 'control-label' %>
      <div class="controls">
        <%= f.number_field :ddd %>
      </div>
    </div>
    <div class="right">
      <%= f.label :phone, class: 'control-label' %>
      <div class="controls">
        <%= f.phone_field :phone %>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time_value_string, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :time_value_string %>
      <%= f.hidden_field :time_value %>
    </div>
  </div>
  <div class="control-group controls">
    <div class="left">
      <%= f.submit t '.submit', class: 'btn btn-primary' %>
    </div>
    <div class="right">
      <%= link_to t('.back'), clients_path, :class => 'back' %>
    </div>
  </div>
<% end %>
